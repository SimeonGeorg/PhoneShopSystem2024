{
    @model PhoneAddModel
}
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Brand"></label>
                <input asp-for="Brand" class="form-control" placeholder="Brand...">
                <span asp-validation-for="Brand" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" placeholder="Model...">
                <span asp-validation-for="Model" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Your image URL here...">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control">
                    <option value="">Select Category</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Performances.Ram"></label>
                <input asp-for="Performances.Ram" class="form-control" placeholder="Your phone ram">
                <span asp-validation-for="Performances.Ram" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Performances.Processor"></label>
                <input asp-for="Performances.Processor" class="form-control" placeholder="Your phone processor">
                <span asp-validation-for="Performances.Processor" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Performances.Storage"></label>
                <input asp-for="Performances.Storage" class="form-control" placeholder="Your phone storage ">
                <span asp-validation-for="Performances.Storage" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Performances.Battery"></label>
                <input asp-for="Performances.Battery" class="form-control" placeholder="Your phone battery type and capacity">
                <span asp-validation-for="Performances.Battery" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Performances.CameraPxl"></label>
                <input asp-for="Performances.CameraPxl" class="form-control"placeholder="Your phone camera pixels">
                <span asp-validation-for="Performances.CameraPxl" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>